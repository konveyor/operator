---
apiVersion: v1
kind: Service
metadata:
  annotations:
    service.beta.openshift.io/serving-cert-secret-name: {{ keycloak_tls_secret_name }}
  labels:
    app.kubernetes.io/name: {{ keycloak_service_name }}
    app.kubernetes.io/component: {{ keycloak_component_name }}
    app.kubernetes.io/part-of: {{ app_name }}
  name: {{ keycloak_service_name }}
  namespace: {{ app_namespace }}
spec:
  ports:
    - name: http
      port: 8080
      targetPort: 8080
      protocol: TCP
    - name: https
      port: 8443
      targetPort: 8443
      protocol: TCP
  selector:
    app.kubernetes.io/name: {{ keycloak_service_name }}
    app.kubernetes.io/component: {{ keycloak_component_name }}
    app.kubernetes.io/part-of: {{ app_name }}
  type: ClusterIP
